<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugraLife Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom border-secondary">
                <i class="bi bi-rocket-takeoff-fill me-2"></i>BugraLife
            </div>
            
            <div class="list-group list-group-flush my-3" id="sidebar-menu">

                <a href="/Home" class="list-group-item list-group-item-action bg-transparent second-text fw-bold menu-item">
                    <i class="bi bi-speedometer2 me-2"></i> Ana Sayfa
                </a>

                <a href="#financeSubmenu" data-bs-toggle="collapse" class="list-group-item list-group-item-action bg-transparent second-text fw-bold dropdown-toggle">
                    <i class="bi bi-wallet2 me-2"></i> Finansal İşlemler
                </a>
                <div class="collapse" id="financeSubmenu">
                    <a href="/Income" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-arrow-up-circle text-success me-2"></i> Gelirler
                    </a>
                    <a href="/Expense" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-arrow-down-circle text-danger me-2"></i> Giderler
                    </a>
                    <a href="/CreditCardPayment" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-credit-card me-2"></i> Kredi Kartı Ödeme
                    </a>
                    <a href="/MoneyTransfer/Index" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-arrow-left-right me-2"></i> Para Transferi (Virman)
                    </a>
                    <a href="/Asset" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-cash-coin me-2"></i> Portföy Hareketleri
                    </a>
                    <a href="/Movement" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-journal-text me-2"></i> Cari Hareketleri
                    </a>

                    <a href="/PracticalNote" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-sticky me-2"></i> Pratik Notlar
                    </a>
                </div>

                <a href="#lifeSubmenu" data-bs-toggle="collapse" class="list-group-item list-group-item-action bg-transparent second-text fw-bold dropdown-toggle">
                    <i class="bi bi-calendar-check me-2"></i> Planlama & Yaşam
                </a>
                <div class="collapse" id="lifeSubmenu">
                    <a href="/PlannedToDo" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-calendar-week me-2"></i> Planlı İşler
                    </a>
                    <a href="/UnPlannedToDo" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-lightning-charge me-2"></i> Planlanmamış İşler
                    </a>
                    <a href="/Activity" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-activity me-2"></i> Alışkanlıklar (Aktivite)
                    </a>
                    <a href="/Daily" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-journal-bookmark me-2"></i> Günlük
                    </a>
                </div>

                <a href="#toolsSubmenu" data-bs-toggle="collapse" class="list-group-item list-group-item-action bg-transparent second-text fw-bold dropdown-toggle">
                    <i class="bi bi-tools me-2"></i> Araçlar & Raporlar
                </a>
                <div class="collapse" id="toolsSubmenu">
                    <a href="/Report" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-bar-chart-line me-2"></i> Raporlar
                    </a>

                    <a href="/FileManager" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-folder2-open me-2"></i> Dosya Merkezi
                    </a>

                    <a href="/Location/Maps" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-map me-2"></i> Harita Görünümü
                    </a>
                    <a href="/Passwords" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-shield-lock me-2"></i> Şifrelerim
                    </a>
                </div>

                <div class="sidebar-group-header">Sistem</div>
                
                <a href="#definitionsSubmenu" data-bs-toggle="collapse" class="list-group-item list-group-item-action bg-transparent second-text fw-bold dropdown-toggle">
                    <i class="bi bi-database-gear me-2"></i> Tanımlamalar
                </a>
                <div class="collapse" id="definitionsSubmenu">
                    <a href="/PaymentType" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-wallet me-2"></i> Hesap Tanımları
                    </a>
                    <a href="/Person" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-person-vcard me-2"></i> Kişi Tanımları
                    </a>
                    <a href="/Debtor" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-person-exclamation me-2"></i> Borçlu/Alacaklı
                    </a>
                    <a href="/IncomeType" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-graph-up-arrow me-2"></i> Gelir Kategorileri
                    </a>
                    <a href="/ExpenseType" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-tags-fill me-2"></i> Gider Kategorileri
                    </a>
                    <a href="/FixedExpense" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-calendar-event me-2"></i> Sabit Giderler
                    </a>
                    <a href="/Ingredients" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-box-seam me-2"></i> Varlık Türleri
                    </a>
                    <a href="/WebSite" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-globe2 me-2"></i> Web Siteleri
                    </a>
                    <a href="/Location" class="list-group-item list-group-item-action bg-transparent second-text menu-item">
                        <i class="bi bi-geo-alt me-2"></i> Konumlar
                    </a>
                </div>

                <a href="/Settings" class="list-group-item list-group-item-action bg-transparent second-text fw-bold menu-item mt-2">
                    <i class="bi bi-gear-fill me-2"></i> Ayarlar
                </a>

            </div>
        </div>
        <div id="page-content-wrapper">

            <nav class="top-navbar">
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-light" id="menu-toggle"><i class="bi bi-list fs-4"></i></button>
                    <button class="mobile-search-btn" id="mobile-search-toggle"><i class="bi bi-search"></i></button>

                    <div class="search-container" id="search-container-wrapper">
                        <div class="search-box">
                            <i class="bi bi-search search-icon-inside"></i>
                            <input type="text" id="menu-search-input" placeholder="Menüde ara...">
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-light rounded-circle border-0 shadow-sm" id="dark-mode-toggle" title="Tema Değiştir" style="width: 40px; height: 40px;">
                        <i class="bi bi-moon-stars-fill" id="theme-icon"></i>
                    </button>

                    <div class="dropdown">
                        <button class="btn btn-light rounded-circle border-0 shadow-sm position-relative" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="width: 40px; height: 40px;">
                            <i class="bi bi-star-fill text-warning"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="fav-count" style="font-size: 0.6rem; display:none;">
                                0
                            </span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0" style="width: 300px; max-height: 400px; overflow-y: auto;">
                            <li>
                                <h6 class="dropdown-header fw-bold text-uppercase small">Hızlı Erişim</h6>
                            </li>

                            <li class="px-3 mb-2">
                                <button class="btn btn-sm btn-outline-warning w-100 fw-bold" id="btn-toggle-fav">
                                    <i class="bi bi-star me-1"></i> Bu Sayfayı Ekle
                                </button>
                            </li>

                            <li><hr class="dropdown-divider"></li>

                            <div id="favorites-list">
                            <li class="text-center text-muted small py-2">Henüz favori yok.</li>
                    </div>
                    </ul>
                </div>

                    <div class="dropdown">
                        <div class="d-flex align-items-center gap-3" data-bs-toggle="dropdown" style="cursor:pointer">
                            <div class="text-end d-none d-md-block">
                                <div style="font-weight:600; font-size:0.9rem;">@User.Identity?.Name</div>
                                <small class="">Admin</small>
                            </div>
                            <img src="https://ui-avatars.com/api/?name=@(User.Identity?.Name ?? "User")&background=random" class="profile-img">
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                            <li><a class="dropdown-item" href="/Settings"><i class="bi bi-person me-2"></i> Profilim</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/Login/Logout"><i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="main-content">
                @RenderBody()
            </div>

            <footer class="text-center text-muted py-3 mt-auto">
                <small>&copy; @DateTime.Now.Year BugraLife - Kişisel Yaşam Yönetimi</small>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <partial name="LayoutScript" />


    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
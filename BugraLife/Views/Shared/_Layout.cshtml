<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugraLife Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

   
</head>
<body>

    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">BugraLife 🚀</div>
            <div class="list-group list-group-flush mt-3" id="sidebar-menu">

                <a href="/Home" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-speedometer2"></i> Ana Sayfa
                </a>

                <a href="/WebSite" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-globe"></i> Web Siteleri
                </a>

                <a href="/Passwords" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-key-fill"></i> Şifrelerim
                </a>


                <a href="/Ingredients" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-wallet2"></i> Varlık Türü
                </a>

                <a href="/Asset" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-cash-coin"></i> Varlık Hareketleri
                </a>

                <a href="/Person" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-person-vcard"></i> Kişi Tanımları
                </a>

                <a href="/Debtor" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-person-exclamation"></i> Borçlu/Alacaklı Tanımları
                </a>

                <a href="/ExpenseType/Index" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-tags-fill"></i> Gider Türleri
                </a>

                <a href="/Dailies/Index" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-journal-text"></i> Günlük
                </a>

                <a href="#" class="list-group-item list-group-item-action menu-item">
                    <i class="bi bi-gear"></i> Ayarlar
                </a>

            </div>
        </div>

        <div id="page-content-wrapper">

            <nav class="top-navbar">
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-light" id="menu-toggle"><i class="bi bi-list fs-4"></i></button>
                    <button class="mobile-search-btn" id="mobile-search-toggle"><i class="bi bi-search"></i></button>

                    <div class="search-container" id="search-container-wrapper">
                        <div class="search-box">
                            <i class="bi bi-search search-icon-inside"></i>
                            <input type="text" id="menu-search-input" placeholder="Menüde ara...">
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-3">

                    <button class="btn btn-light rounded-circle border-0 shadow-sm" id="dark-mode-toggle" title="Tema Değiştir" style="width: 40px; height: 40px;">
                        <i class="bi bi-moon-stars-fill" id="theme-icon"></i>
                    </button>

                    <div class="dropdown">
                        <div class="d-flex align-items-center gap-3" data-bs-toggle="dropdown" style="cursor:pointer">
                            <div class="text-end d-none d-md-block">
                                <div style="font-weight:600; font-size:0.9rem;">@User.Identity?.Name</div>
                                <small class="text-muted">Admin</small>
                            </div>
                            <img src="https://ui-avatars.com/api/?name=@(User.Identity?.Name ?? "User")&background=random" class="profile-img">
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Profilim</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/Login/Logout"><i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="main-content">
                @RenderBody()
            </div>

            <footer class="text-center text-muted py-3 mt-auto">
                <small>&copy; @DateTime.Now.Year BugraLife</small>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <partial name="LayoutScript" />

    @await RenderSectionAsync("Scripts", required: false)

   

</body>
</html>
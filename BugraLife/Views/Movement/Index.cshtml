@using System.Globalization
@model IEnumerable<Movement>

@{
    ViewData["Title"] = "Cari Hareketleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var trCulture = new System.Globalization.CultureInfo("tr-TR");
}
@Html.AntiForgeryToken()

<div class="card shadow-sm border-0 mt-3">
    <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-info"><i class="bi bi-arrow-left-right me-2"></i>Cari / Borç-Alacak Hareketleri</h5>

        <button type="button" class="btn btn-info text-white btn-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-lg me-1"></i> Yeni Hareket
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table datatable table-hover table-striped align-middle">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Cari (Borçlu/Alacaklı)</th>
                        <th>Varlık Türü</th>
                        <th>İlgili Kişi</th>
                        <th>Açıklama</th>
                        <th class="text-end">Miktar/Tutar</th>
                        <th width="100">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.movement_date.ToString("dd.MM.yyyy")</td>

                            <td class="fw-bold">
                                @(item.Debtor != null ? item.Debtor.debtor_name : "-")
                            </td>

                            <td>
                                <span class="badge bg-warning bg-opacity-10 text-warning border border-warning">
                                    @(item.Ingredient != null ? item.Ingredient.ingredient_name : "-")
                                </span>
                            </td>

                            <td>
                                @(item.Person != null ? item.Person.person_name : "-")
                            </td>

                            <td class="text-muted small">@item.movement_description</td>

                            <td class="text-end fw-bold text-info pe-3">
                                @item.movement_amount.ToString("N2", trCulture)
                            </td>

                            <td>
                                <div class="d-flex gap-2 justify-content-center">
                                    <button class="btn btn-warning btn-sm text-white btn-edit"
                                            data-id="@item.movement_id"
                                            data-debtor="@item.debtor_id"
                                            data-ingredient="@item.ingredient_id"
                                            data-person="@item.person_id"
                                            data-amount="@item.movement_amount.ToString("N2", trCulture)"
                                            data-date="@item.movement_date.ToString("yyyy-MM-dd")"
                                            data-desc="@item.movement_description">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm" onclick="deleteItem(@item.movement_id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-info">Yeni Cari Hareketi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createForm" method="post">
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tarih</label>
                            <input type="date" name="movement_date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Miktar</label>
                            <input type="text" inputmode="decimal" name="movement_amount" class="form-control" required placeholder="0,00"
                                   oninput="this.value = this.value.replace('.', ',').replace(/[^0-9,-]/g, '');">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Cari (Kim?)</label>
                        <select name="debtor_id" class="aga-select" required>
                            <option value="">Seçiniz...</option>
                            @if (ViewBag.Debtors != null)
                            {
                                foreach (var d in ViewBag.Debtors as List<Debtor>)
                                {
                                    <option value="@d.debtor_id">@d.debtor_name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Varlık Türü (Ne?)</label>
                            <select name="ingredient_id" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.Ingredients != null)
                                {
                                    foreach (var i in ViewBag.Ingredients as List<Ingredient>)
                                    {
                                        <option value="@i.ingredient_id">@i.ingredient_name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">İlgili Kişi (Bizden)</label>
                            <select name="person_id" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.Persons != null)
                                {
                                    foreach (var p in ViewBag.Persons as List<Person>)
                                    {
                                        <option value="@p.person_id">@p.person_name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="movement_description" class="form-control" rows="2"></textarea>
                    </div>

                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-info text-white">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-warning">Hareketi Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editForm" method="post">
                <div class="modal-body">
                    <input type="hidden" name="movement_id" id="edit_id">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tarih</label>
                            <input type="date" name="movement_date" id="edit_date" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Miktar</label>
                            <input type="text" inputmode="decimal" name="movement_amount" id="edit_amount" class="form-control" required
                                   oninput="this.value = this.value.replace('.', ',').replace(/[^0-9,-]/g, '');">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Cari</label>
                        <select name="debtor_id" id="edit_debtor" class="aga-select" required>
                            <option value="">Seçiniz...</option>
                            @if (ViewBag.Debtors != null)
                            {
                                foreach (var d in ViewBag.Debtors as List<Debtor>)
                                {
                                    <option value="@d.debtor_id">@d.debtor_name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Varlık Türü</label>
                            <select name="ingredient_id" id="edit_ingredient" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.Ingredients != null)
                                {
                                    foreach (var i in ViewBag.Ingredients as List<Ingredient>)
                                    {
                                        <option value="@i.ingredient_id">@i.ingredient_name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">İlgili Kişi</label>
                            <select name="person_id" id="edit_person" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.Persons != null)
                                {
                                    foreach (var p in ViewBag.Persons as List<Person>)
                                    {
                                        <option value="@p.person_id">@p.person_name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="movement_description" id="edit_desc" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning text-white">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            // --- A. DÜZENLEME BUTONU ---
            $('.datatable').on('click', '.btn-edit', function() {
                var id = $(this).data('id');
                var debtorId = $(this).data('debtor');
                var ingredientId = $(this).data('ingredient');
                var personId = $(this).data('person');
                var amount = $(this).data('amount'); // "500.000,50" formatında gelir
                var dateStr = $(this).data('date');
                var desc = $(this).data('desc');

                $('#edit_id').val(id);

                $('#edit_debtor').val(debtorId).trigger('change');
                $('#edit_ingredient').val(ingredientId).trigger('change');
                $('#edit_person').val(personId).trigger('change');

                $('#edit_amount').val(amount); // Direkt basıyoruz
                $('#edit_date').val(dateStr);
                $('#edit_desc').val(desc);

                $('#editModal').modal('show');
            });

            // --- B. EKLEME (AJAX) ---
            $('#createForm').submit(function(e) {
                e.preventDefault();
                processForm($(this), '/Movement/Create');
            });

            // --- C. GÜNCELLEME (AJAX) ---
            $('#editForm').submit(function(e) {
                e.preventDefault();
                processForm($(this), '/Movement/Edit');
            });

            // --- ORTAK FORM İŞLEME ---
            function processForm(form, url) {
                var formDataArray = form.serializeArray();

                // Noktaları temizle, virgül kalsın
                for (var i = 0; i < formDataArray.length; i++) {
                    if (formDataArray[i].name === "movement_amount") {
                        formDataArray[i].value = formDataArray[i].value.replace(/\./g, '');
                        break;
                    }
                }

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: formDataArray,
                    success: function(response) {
                        if (response.success) {
                            $('.modal').modal('hide');
                            showToast('success', response.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() { showToast('error', 'Hata oluştu.'); }
                });
            }
        });

        // --- D. SİLME ---
        function deleteItem(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu hareket kaydı silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'Vazgeç',
                background: document.documentElement.getAttribute('data-theme') === 'dark' ? '#252b36' : '#fff',
                color: document.documentElement.getAttribute('data-theme') === 'dark' ? '#fff' : '#333'
            }).then((result) => {
                if (result.isConfirmed) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    $.ajax({
                        url: '/Movement/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function(response) {
                            if (response.success) {
                                showToast('success', response.message);
                                setTimeout(() => location.reload(), 1000);
                            } else {
                                showToast('error', response.message);
                            }
                        }
                    });
                }
            })
        }
    </script>
}
@model IEnumerable<Person>

@{
    ViewData["Title"] = "Kişi Tanımları";
}
@Html.AntiForgeryToken()

<div class="card shadow-sm border-0 mt-3">
    <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-person-vcard me-2"></i>Kişi / Kurum Listesi</h5>

        <button type="button" class="btn btn-primary btn-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-lg me-1"></i> Yeni Kişi Ekle
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table datatable table-hover table-striped align-middle">
                <thead>
                    <tr>
                        <th width="50">Sıra</th>
                        <th>Adı</th>
                        <th>Tür</th>
                        <th width="100">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@item.person_order</td>
                            <td class="fw-bold">@item.person_name</td>
                            <td>
                                @if (item.is_bank)
                                {
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary">
                                        <i class="bi bi-bank me-1"></i> Banka Hesabı
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                        <i class="bi bi-person me-1"></i> Kişi
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-warning btn-sm text-white btn-edit"
                                            data-id="@item.person_id"
                                            data-name="@item.person_name"
                                            data-bank="@item.is_bank"
                                            data-order="@item.person_order">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm" onclick="deleteItem(@item.person_id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-primary">Yeni Kişi Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createForm" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Kişi Adı</label>
                        <input type="text" name="person_name" class="form-control" required placeholder="Örn: Buğra Öztürk">
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="is_bank" value="true" id="create_is_bank">
                            <label class="form-check-label" for="create_is_bank">Bu bir banka hesabı mı?</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Sıralama</label>
                        <input type="number" name="person_order" id="create_person_order" class="form-control" value="@ViewBag.NextOrder">
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-warning">Kişi Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editForm" method="post">
                <div class="modal-body">
                    <input type="hidden" name="person_id" id="edit_id">

                    <div class="mb-3">
                        <label class="form-label">Kişi Adı</label>
                        <input type="text" name="person_name" id="edit_name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="is_bank" value="true" id="edit_is_bank">
                            <label class="form-check-label" for="edit_is_bank">Bu bir banka hesabı mı?</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Sıralama</label>
                        <input type="number" name="person_order" id="edit_order" class="form-control">
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning text-white">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            // --- A. DÜZENLEME BUTONU VE CHECKBOX AYARI ---
            $('.datatable').on('click', '.btn-edit', function() {
                var id = $(this).data('id');
                var name = $(this).data('name');

                // Razor'dan gelen bool değer "True" veya "False" stringi olarak gelir.
                // JavaScript'te bunu boolean'a çevirmemiz lazım.
                var isBankString = $(this).data('bank');
                var isBank = isBankString === "True" || isBankString === true;

                var order = $(this).data('order');

                $('#edit_id').val(id);
                $('#edit_name').val(name);
                $('#edit_order').val(order);

                // Checkbox'ın durumunu ayarla (true ise check at, false ise kaldır)
                $('#edit_is_bank').prop('checked', isBank);

                $('#editModal').modal('show');
            });

            // --- B. EKLEME (AJAX) ---
            $('#createForm').submit(function(e) {
                e.preventDefault();
                var formData = $(this).serialize();

                $.ajax({
                    url: '/Person/Create',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('#createModal').modal('hide');
                            showToast('success', response.message);

                            // Otomatik sıra artır ve formu temizle
                            var currentVal = parseInt($('#create_person_order').val());
                            $('#create_person_order').val(currentVal + 1);

                            $('input[name="person_name"]').val('');
                            // Checkbox'ı temizle (unchecked yap)
                            $('#create_is_bank').prop('checked', false);

                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() {
                        showToast('error', 'Bir hata oluştu.');
                    }
                });
            });

            // --- C. GÜNCELLEME (AJAX) ---
            $('#editForm').submit(function(e) {
                e.preventDefault();
                var formData = $(this).serialize();

                $.ajax({
                    url: '/Person/Edit',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('#editModal').modal('hide');
                            showToast('success', response.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() {
                        showToast('error', 'Bir hata oluştu.');
                    }
                });
            });
        });

        // --- D. SİLME (Değişmedi ama bütünlük için ekliyorum) ---
        function deleteItem(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kayıt silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'Vazgeç',
                background: document.documentElement.getAttribute('data-theme') === 'dark' ? '#252b36' : '#fff',
                color: document.documentElement.getAttribute('data-theme') === 'dark' ? '#fff' : '#333'
            }).then((result) => {
                if (result.isConfirmed) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    $.ajax({
                        url: '/Person/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function(response) {
                            if (response.success) {
                                showToast('success', response.message);
                                setTimeout(() => location.reload(), 1000);
                            } else {
                                showToast('error', response.message);
                            }
                        },
                        error: function() {
                             showToast('error', 'Hata oluştu.');
                        }
                    });
                }
            })
        }
    </script>
}
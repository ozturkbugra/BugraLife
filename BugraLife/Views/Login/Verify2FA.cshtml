@{
    Layout = null; // Layout kullanma, Login gibi boş sayfa olsun
}

<!DOCTYPE html>
<html lang="tr" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <title>2FA Doğrulama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #212529;
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background-color: #2c3034;
            border: 1px solid #373b3e;
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            background-color: #212529;
            border-color: #495057;
            color: #fff;
            letter-spacing: 5px;
            text-align: center;
            font-size: 1.5rem;
        }

            .form-control:focus {
                background-color: #212529;
                color: #fff;
                border-color: #ffc107;
                box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
            }
    </style>
</head>
<body>
    <div class="card shadow-lg">
        <div class="card-body p-5 text-center">
            <i class="bi bi-shield-lock-fill text-warning" style="font-size: 4rem;"></i>
            <h3 class="fw-bold mt-3">Güvenlik Doğrulaması</h3>
            <p class="text-secondary mb-4">Lütfen Google Authenticator uygulamasındaki 6 haneli kodu giriniz.</p>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" action="/Login/Verify2FA">
                <div class="mb-4">
                    <input type="text" name="code" class="form-control" placeholder="000 000" maxlength="6" autofocus required autocomplete="off">
                </div>
                <button type="submit" class="btn btn-warning w-100 fw-bold">Doğrula</button>
                <a href="/Login/Index" class="btn btn-link text-secondary mt-3 text-decoration-none">Girişe Dön</a>
            </form>
        </div>
    </div>
</body>
</html>
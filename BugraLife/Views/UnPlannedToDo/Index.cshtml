@model IEnumerable<UnPlannedToDo>

@{
    ViewData["Title"] = "Planlanmamış İşler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.AntiForgeryToken()

<div class="card shadow-sm border-0 mt-3">
    <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-warning"><i class="bi bi-lightning-charge-fill me-2"></i>Aklına Gelenler / Notlar</h5>

        <button type="button" class="btn btn-warning text-white btn-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-lg me-1"></i> Hızlı Not Ekle
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table datatable table-hover align-middle">
                <thead>
                    <tr>
                        <th width="50">Durum</th>
                        <th>Yapılacak İş / Not</th>
                        <th width="150">Tarih</th>
                        <th width="140">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Yapılanlar için opacity ve çizik yazı. bg-light yerine saydamlık kullandık.
                        var rowClass = item.unplannedtodo_done ? "text-muted text-decoration-line-through opacity-50" : "";
                        var checkState = item.unplannedtodo_done ? "checked" : "";

                        <tr class="@rowClass">
                            <td class="text-center">
                                <div class="form-check form-switch d-flex justify-content-center">
                                    <input class="form-check-input" type="checkbox" style="cursor:pointer; transform: scale(1.3);"
                                           onchange="changeStatus(@item.unplannedtodo_id)" @checkState>
                                </div>
                            </td>

                            <td class="fw-bold text-truncate" style="max-width: 300px;">
                                @item.unplannedtodo_description
                            </td>

                            <td class="small">
                                <i class="bi bi-clock me-1"></i> @item.unplannedtodo_createdat.ToString("dd.MM.yyyy HH:mm")
                            </td>

                            <td>
                                <div class="d-flex gap-2 justify-content-center">
                                    <button class="btn btn-info btn-sm text-white btn-detail"
                                            data-desc="@item.unplannedtodo_description"
                                            data-date="@item.unplannedtodo_createdat.ToString("dd.MM.yyyy HH:mm")"
                                            data-status="@(item.unplannedtodo_done ? "Yapıldı" : "Bekliyor")">
                                        <i class="bi bi-eye"></i>
                                    </button>

                                    <button class="btn btn-warning btn-sm text-white btn-edit"
                                            data-id="@item.unplannedtodo_id"
                                            data-desc="@item.unplannedtodo_description">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm" onclick="deleteItem(@item.unplannedtodo_id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-warning">Hızlı Not Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createForm" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="unplannedtodo_description" class="form-control" rows="3" required placeholder="Ne yapman gerekiyor?"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning text-white">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-warning">Notu Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editForm" method="post">
                <div class="modal-body">
                    <input type="hidden" name="unplannedtodo_id" id="edit_id">
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="unplannedtodo_description" id="edit_desc" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning text-white">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-info">Not Detayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary small">DURUM</label>
                    <div>
                        <span id="detail_status" class="badge"></span>
                        <span id="detail_date" class="ms-2 small text-muted"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary small">YAPILACAK İŞ / AÇIKLAMA</label>

                    <div class="p-3 rounded border bg-secondary bg-opacity-10"
                         style="min-height: 100px; white-space: pre-wrap;"
                         id="detail_desc">
                    </div>
                </div>

            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary w-100" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            // --- A. DETAY BUTONU ---
            $('.datatable').on('click', '.btn-detail', function() {
                var desc = $(this).data('desc');
                var date = $(this).data('date');
                var status = $(this).data('status');

                $('#detail_desc').text(desc);
                $('#detail_date').text(date);

                var $statusBadge = $('#detail_status');
                $statusBadge.text(status);

                // Badge renkleri (Koyu modda da okunur)
                if(status === "Yapıldı") {
                    $statusBadge.removeClass('bg-warning text-dark').addClass('bg-success');
                } else {
                    $statusBadge.removeClass('bg-success').addClass('bg-warning text-dark');
                }

                $('#detailModal').modal('show');
            });

            // --- B. DÜZENLEME ---
            $('.datatable').on('click', '.btn-edit', function() {
                var id = $(this).data('id');
                var desc = $(this).data('desc');
                $('#edit_id').val(id);
                $('#edit_desc').val(desc);
                $('#editModal').modal('show');
            });

            // --- C. EKLEME ---
            $('#createForm').submit(function(e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    url: '/UnPlannedToDo/Create',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('#createModal').modal('hide');
                            showToast('success', response.message);
                            setTimeout(() => location.reload(), 500);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() { showToast('error', 'Hata oluştu.'); }
                });
            });

            // --- D. GÜNCELLEME ---
            $('#editForm').submit(function(e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    url: '/UnPlannedToDo/Edit',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('#editModal').modal('hide');
                            showToast('success', response.message);
                            setTimeout(() => location.reload(), 500);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() { showToast('error', 'Hata oluştu.'); }
                });
            });
        });

        // --- E. DURUM DEĞİŞTİR ---
        function changeStatus(id) {
            $.ajax({
                url: '/UnPlannedToDo/ChangeStatus',
                type: 'POST',
                data: { id: id },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        showToast('error', 'Durum güncellenemedi.');
                    }
                }
            });
        }

        // --- F. SİLME ---
        function deleteItem(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu not silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'Vazgeç',
                // Dark mode Swal
                background: document.documentElement.getAttribute('data-theme') === 'dark' ? '#252b36' : '#fff',
                color: document.documentElement.getAttribute('data-theme') === 'dark' ? '#fff' : '#333'
            }).then((result) => {
                if (result.isConfirmed) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    $.ajax({
                        url: '/UnPlannedToDo/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function(response) {
                            if (response.success) {
                                showToast('success', response.message);
                                setTimeout(() => location.reload(), 500);
                            } else {
                                showToast('error', response.message);
                            }
                        }
                    });
                }
            })
        }
    </script>
}
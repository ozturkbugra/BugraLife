@model IEnumerable<PaymentType>

@{
    ViewData["Title"] = "Ödeme Türleri / Hesaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.AntiForgeryToken()

<div class="card shadow-sm border-0 mt-3">
    <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-credit-card-2-front me-2"></i>Ödeme Türleri / Hesaplar</h5>

        <button type="button" class="btn btn-primary btn-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-lg me-1"></i> Yeni Hesap Ekle
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table datatable table-hover align-middle">
                <thead>
                    <tr>
                        <th width="50" class="text-secondary">Sıra</th>
                        <th class="text-secondary">Hesap Adı</th>
                        <th class="text-secondary">Hesap Türü</th>
                        <th class="text-end text-secondary">Mevcut Bakiye</th>
                        <th width="100" class="text-secondary">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@item.paymenttype_order</td>
                            <td class="fw-bold">@item.paymenttype_name</td>

                            <td>
                                @if (item.is_creditcard)
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">
                                        <i class="bi bi-credit-card me-1"></i> Kredi Kartı
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        <i class="bi bi-wallet2 me-1"></i> Standart Hesap / Nakit
                                    </span>
                                }
                            </td>

                            <td class="text-end fw-bold pe-3">
                                @item.paymenttype_balance.ToString("N2") ₺
                            </td>

                            <td>
                                <div class="d-flex gap-2 justify-content-center">
                                    <button class="btn btn-warning btn-sm text-white btn-edit"
                                            data-id="@item.paymenttype_id"
                                            data-name="@item.paymenttype_name"
                                            data-balance="@item.paymenttype_balance"
                                            data-order="@item.paymenttype_order"
                                            data-creditcard="@item.is_creditcard">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm" onclick="deleteItem(@item.paymenttype_id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-primary">Yeni Hesap Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createForm" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Hesap Adı</label>
                        <input type="text" name="paymenttype_name" class="form-control" required placeholder="Örn: Bonus Card, Nakit Kasa...">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Açılış Bakiyesi</label>
                        <div class="input-group">
                            <input type="number" step="0.01" name="paymenttype_balance" class="form-control" placeholder="0.00">
                            <span class="input-group-text">₺</span>
                        </div>
                        <div class="form-text text-muted small">
                            Pozitif (+) girerseniz <b>Gelir</b>, Negatif (-) girerseniz <b>Gider</b> kaydı oluşur.
                        </div>
                    </div>

                    <div class="mb-3 border p-3 rounded bg-secondary bg-opacity-10 d-flex align-items-center justify-content-between">
                        <div>
                            <label class="form-check-label fw-bold" for="create_is_creditcard">Bu bir Kredi Kartı mı?</label>
                            <div class="small text-muted">İşaretlemezseniz normal hesap olur.</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="is_creditcard" value="true" id="create_is_creditcard" style="transform: scale(1.3);">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Sıralama</label>
                        <input type="number" name="paymenttype_order" id="create_order" class="form-control" value="@ViewBag.NextOrder">
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-warning">Hesap Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editForm" method="post">
                <div class="modal-body">
                    <input type="hidden" name="paymenttype_id" id="edit_id">

                    <div class="mb-3">
                        <label class="form-label">Hesap Adı</label>
                        <input type="text" name="paymenttype_name" id="edit_name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Bakiye (Manuel Düzeltme)</label>
                        <input type="number" step="0.01" name="paymenttype_balance" id="edit_balance" class="form-control">
                    </div>

                    <div class="mb-3 border p-3 rounded bg-secondary bg-opacity-10 d-flex align-items-center justify-content-between">
                        <div>
                            <label class="form-check-label fw-bold" for="edit_is_creditcard">Bu bir Kredi Kartı mı?</label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="is_creditcard" value="true" id="edit_is_creditcard" style="transform: scale(1.3);">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Sıralama</label>
                        <input type="number" name="paymenttype_order" id="edit_order" class="form-control">
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning text-white">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            // A. DÜZENLEME BUTONU
            $('.datatable').on('click', '.btn-edit', function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var balance = $(this).data('balance');
                var order = $(this).data('order');

                // Sadece is_creditcard verisini alıyoruz
                var isCredit = $(this).data('creditcard') === "True" || $(this).data('creditcard') === true;

                $('#edit_id').val(id);
                $('#edit_name').val(name);
                $('#edit_order').val(order);

                if(balance) {
                    var parsedBalance = balance.toString().replace(',', '.');
                    $('#edit_balance').val(parsedBalance);
                } else {
                    $('#edit_balance').val(0);
                }

                // Checkbox'ı işaretle
                $('#edit_is_creditcard').prop('checked', isCredit);

                $('#editModal').modal('show');
            });

            // B. EKLEME (AJAX)
            $('#createForm').submit(function(e) {
                e.preventDefault();
                var formData = $(this).serialize();

                $.ajax({
                    url: '/PaymentType/Create',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('#createModal').modal('hide');
                            showToast('success', response.message);

                            // Temizlik
                            var currentVal = parseInt($('#create_order').val()) || 0;
                            $('#create_order').val(currentVal + 1);
                            $('input[name="paymenttype_name"]').val('');
                            // Checkbox'ı sıfırla
                            $('#create_is_creditcard').prop('checked', false);

                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() { showToast('error', 'Hata oluştu.'); }
                });
            });

            // C. GÜNCELLEME (AJAX)
            $('#editForm').submit(function(e) {
                e.preventDefault();
                // Checkbox seçili değilse formda false gitmesi için ek işlem gerekebilir ama
                // ASP.NET Core genelde checkbox işaretli değilse false kabul eder.
                // Garanti olsun diye serialize işini kontrol edelim.

                var formData = $(this).serialize();

                // Eğer checkbox işaretli değilse formData içinde "is_creditcard" hiç gitmeyebilir.
                // Bu durumda Controller false kabul eder. Sorun yok.

                $.ajax({
                    url: '/PaymentType/Edit',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            $('#editModal').modal('hide');
                            showToast('success', response.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() { showToast('error', 'Hata oluştu.'); }
                });
            });
        });

        // D. SİLME
        function deleteItem(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu hesap silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'Vazgeç',
                background: document.documentElement.getAttribute('data-theme') === 'dark' ? '#252b36' : '#fff',
                color: document.documentElement.getAttribute('data-theme') === 'dark' ? '#fff' : '#333'
            }).then((result) => {
                if (result.isConfirmed) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    $.ajax({
                        url: '/PaymentType/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function(response) {
                            if (response.success) {
                                showToast('success', response.message);
                                setTimeout(() => location.reload(), 1000);
                            } else {
                                showToast('error', response.message);
                            }
                        }
                    });
                }
            })
        }
    </script>
}
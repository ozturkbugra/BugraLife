@model PortfolioReportViewModel

@{
    ViewData["Title"] = "Portföy Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">

    <div class="card shadow-lg mb-4">
        <div class="card-header bg-info text-black fw-bold border-bottom-0">
            <i class="bi bi-pie-chart-fill me-2"></i>Portföy Analizi
        </div>
        <div class="card-body">
            <form method="get" action="/Report/PortfolioReport">
                <div class="row align-items-end g-3">

                    <div class="col-md-3">
                        <label class="form-label fw-bold text-info">Varlık Türü</label>
                        <select class="aga-select" name="ingredientIds" multiple="multiple" required>
                            <!option value="-1" @(Model.SelectedIngredientIds.Contains(-1) ? "selected" : "")>TÜMÜ</!option>
                            @foreach (var item in ViewBag.Ingredients as List<Ingredient>)
                            {
                                <!option value="@item.ingredient_id"
                                @(Model.SelectedIngredientIds.Contains(item.ingredient_id) ? "selected" : "")>
                                    @item.ingredient_name
                                </!option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold text-info">Sahibi</label>
                        <select class="aga-select" name="personIds" multiple="multiple">
                            <!option value="-1" @(Model.SelectedPersonIds.Contains(-1) ? "selected" : "")>TÜMÜ</!option>
                            @foreach (var item in ViewBag.Persons as List<Person>)
                            {
                                <!option value="@item.person_id"
                                @(Model.SelectedPersonIds.Contains(item.person_id) ? "selected" : "")>
                                    @item.person_name
                                </!option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label fw-bold text-info">Başlangıç</label>
                        <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold text-info">Bitiş</label>
                        <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                    </div>

                    <div class="col-md-2">
                        <button type="submit" class="btn btn-info text-dark w-100 fw-bold">
                            <i class="bi bi-search me-1"></i>Ara
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.GroupedItems != null && Model.GroupedItems.Any())
    {
        <div class="card shadow-lg mb-4">
            <div class="card-header bg-dark border-bottom border-secondary text-info fw-bold">
                <i class="bi bi-wallet2 me-2"></i>Varlık Türüne Göre Toplamlar
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="text-secondary ps-4">Varlık / Birim</th>
                                <th class="text-end pe-4 text-secondary">Toplam Miktar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.GroupedItems)
                            {
                                <tr>
                                    <td class="fw-bold ps-4 text-white">
                                        <i class="bi bi-circle-fill text-info small me-2"></i>@group.IngredientName
                                    </td>
                                    <td class="text-end pe-4 fw-bold text-info">
                                        @group.TotalAmount.ToString("N2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card shadow-lg">
            <div class="card-header bg-dark border-bottom border-secondary fw-bold text-white" data-bs-toggle="collapse" data-bs-target="#detailCollapse" style="cursor:pointer;">
                <div class="d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-list-ul me-2"></i>Varlık Hareket Detayları</span>
                    <i class="bi bi-chevron-down text-secondary"></i>
                </div>
            </div>
            <div class="collapse show" id="detailCollapse">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4 text-secondary">Tarih</th>
                                    <th class="text-secondary">Varlık</th>
                                    <th class="text-secondary">Sahibi</th>
                                    <th class="text-secondary">Açıklama</th>
                                    <th class="text-end pe-4 text-secondary">Miktar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Details)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-white">@item.asset_date.ToString("dd.MM.yyyy")</div>
                                        </td>
                                        <td>
                                            <span class="badge" style="background-color: rgba(13, 202, 240, 0.2); color: #0dcaf0; border: 1px solid #0dcaf0;">
                                                @item.Ingredient?.ingredient_name
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary text-white">
                                                @item.Person?.person_name
                                            </span>
                                        </td>
                                        <td class="text-white-50">@item.asset_description</td>
                                        <td class="text-end pe-4 fw-bold text-info">
                                            @item.asset_amount.ToString("N2")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        @if (Model.SelectedIngredientIds.Any())
        {
            <div class="alert alert-dark border-secondary text-center shadow-lg">
                <i class="bi bi-exclamation-circle me-2 text-warning"></i>Kayıt bulunamadı.
            </div>
        }
        else
        {
            <div class="alert alert-dark border-secondary text-center shadow-lg">
                <i class="bi bi-info-circle me-2 text-info"></i>Lütfen varlık türü seçip <b class="text-info">Ara</b> butonuna basınız.
            </div>
        }
    }
</div>


@model ExpenseTypeReportViewModel

@{
    ViewData["Title"] = "Gider Türü Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-4">

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-danger text-white fw-bold">
            <i class="bi bi-funnel-fill me-2"></i>Gider Analizi Filtrele
        </div>
        <div class="card-body">
            <form method="get" action="/Report/ExpenseTypeMovements">
                <div class="row align-items-end g-3">

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Gider Türleri</label>
                        <select class="aga-select" name="typeIds" multiple="multiple" required>
                            <!option value="-1" @(Model.SelectedTypeIds.Contains(-1) ? "selected" : "")>TÜMÜ</!option>

                            @foreach (var item in ViewBag.ExpenseTypes as List<ExpenseType>)
                            {
                                <!option value="@item.expensetype_id"
                                @(Model.SelectedTypeIds.Contains(item.expensetype_id) ? "selected" : "")>
                                    @item.expensetype_name
                                </!option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Kişiler</label>
                        <select class="aga-select" name="personIds" multiple="multiple">
                            <!option value="-1" @(Model.SelectedPersonIds.Contains(-1) ? "selected" : "")>TÜMÜ</!option>
                            @foreach (var item in ViewBag.Persons as List<Person>)
                            {
                                <!option value="@item.person_id" @(Model.SelectedPersonIds.Contains(item.person_id) ? "selected" : "")>@item.person_name</!option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Başlangıç</label>
                        <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Bitiş</label>
                        <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                    </div>

                    <div class="col-md-1">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Items != null && Model.Items.Any())
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card border-0 shadow-sm bg-danger bg-opacity-10 border-start border-4 border-danger">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-danger fw-bold text-uppercase mb-1">Seçilen Dönem Toplam Gider</h6>
                            <div class="small">@Model.Items.Count adet işlem listelendi</div>
                        </div>
                        <h2 class="fw-bold mb-0 text-danger">@Model.TotalAmount.ToString("N2") ₺</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Tarih</th>
                                <th>Kategori</th>
                                <th>Ödenen Hesap</th>
                                <th>Açıklama</th>
                                <th class="text-end pe-4">Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.Date.ToString("dd.MM.yyyy")</div>
                                        <small>@item.Date.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">
                                            @item.CategoryName
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                            @item.AccountName
                                        </span>
                                    </td>
                                    <td>@item.Description</td>
                                    <td class="text-end pe-4 fw-bold text-danger">
                                        - @item.Amount.ToString("N2") ₺
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        @if (Model.SelectedTypeIds.Any())
        {
            <div class="alert alert-warning text-center shadow-sm">
                <i class="bi bi-exclamation-circle me-2"></i>Seçilen kriterlere uygun gider bulunamadı.
            </div>
        }
        else
        {
            <div class="alert alert-info text-center shadow-sm">
                <i class="bi bi-info-circle me-2"></i>Lütfen yukarıdan <b>Gider Türü</b> seçip <b>Ara</b> butonuna basınız.
            </div>
        }
    }
</div>


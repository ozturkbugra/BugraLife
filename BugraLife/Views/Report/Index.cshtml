@{
    ViewData["Title"] = "Raporlar Merkezi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* --- ORTAK AYARLAR --- */
    .report-card {
        transition: all 0.3s ease;
        cursor: pointer;
        border-width: 1px;
        border-style: solid;
    }

        .report-card:hover {
            transform: translateY(-5px);
        }

    /* İkon Kutusu Ortak */
    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    /* Link temizliği */
    a.text-decoration-none {
        color: inherit;
    }


    /* --- LIGHT MODE (AÇIK TEMA) --- */
    [data-bs-theme="light"] .report-card {
        background-color: #fff;
        border-color: #dee2e6;
        color: #212529;
    }

        [data-bs-theme="light"] .report-card:hover {
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            border-color: var(--hover-color, #0d6efd);
        }

    /* Light Mode İkon Kutuları (Bootstrap Classlarını kullanır) */
    [data-bs-theme="light"] .icon-box {
        /* HTML içindeki bg-opacity classları burada işler */
    }


    /* --- DARK MODE (KOYU TEMA - SİMSİYAH) --- */
    [data-bs-theme="dark"] .report-card {
        background-color: #212529 !important; /* Kartları Siyah Yap */
        border-color: #373b3e;
        color: #fff !important; /* Yazıları Beyaz Yap */
        box-shadow: none;
    }

        [data-bs-theme="dark"] .report-card:hover {
            background-color: #2c3034 !important; /* Hover olunca hafif açıl */
            border-color: var(--hover-color, #fff); /* Kenarlık parlasın */
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        }

    [data-bs-theme="dark"] .card-text {
        color: #adb5bd !important; /* Açıklama yazıları gri olsun */
    }

    /* Dark Mode İkon Kutusu (Daha belirgin olsun diye özel ayar) */
    [data-bs-theme="dark"] .icon-box {
        background-color: rgba(255, 255, 255, 0.05) !important; /* Hafif transparan beyaz zemin */
        /* İkon rengini HTML'deki text-class'tan alır */
    }

    /* Dark Mode Başlık Alanı */
    [data-bs-theme="dark"] .page-header-icon {
        background-color: rgba(13, 202, 240, 0.1) !important;
        color: #0dcaf0 !important;
    }
</style>

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <div class="p-3 rounded-circle me-3 bg-primary bg-opacity-10 text-primary page-header-icon">
            <i class="bi bi-bar-chart-line-fill fs-3"></i>
        </div>
        <div>
            <h3 class="fw-bold mb-0">Raporlar Merkezi</h3>
            <span class="small">Finansal durumunuzun detaylı analizleri</span>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-md-6 col-lg-4">
            <a href="/Report/AccountMovements" class="text-decoration-none">
                <div class="card h-100 report-card" style="--hover-color: #0d6efd;">
                    <div class="card-body text-center p-4">
                        <div class="icon-box mx-auto bg-primary bg-opacity-10 text-primary">
                            <i class="bi bi-list-ul"></i>
                        </div>
                        <h5 class="card-title fw-bold">Hesap Hareketleri</h5>
                        <p class="card-text small">Tüm hesaplarınızın giriş-çıkış detaylarını tarih bazlı listeleyin.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/Report/ExpenseTypeMovements" class="text-decoration-none">
                <div class="card h-100 report-card" style="--hover-color: #dc3545;">
                    <div class="card-body text-center p-4">
                        <div class="icon-box mx-auto bg-danger bg-opacity-10 text-danger">
                            <i class="bi bi-graph-down-arrow"></i>
                        </div>
                        <h5 class="card-title fw-bold">Gider Türü Hareketleri</h5>
                        <p class="card-text small">Hangi kategoriye ne kadar harcadınız? Market, Fatura vb. detaylar.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/Report/IncomeTypeMovements" class="text-decoration-none">
                <div class="card h-100 report-card" style="--hover-color: #198754;">
                    <div class="card-body text-center p-4">
                        <div class="icon-box mx-auto bg-success bg-opacity-10 text-success">
                            <i class="bi bi-graph-up-arrow"></i>
                        </div>
                        <h5 class="card-title fw-bold">Gelir Türü Hareketleri</h5>
                        <p class="card-text small">Maaş, ek iş vb. gelir kalemlerinizin detaylı analizi.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/Report/DebtReceivableReport" class="text-decoration-none">
                <div class="card h-100 report-card" style="--hover-color: #ffc107;">
                    <div class="card-body text-center p-4">
                        <div class="icon-box mx-auto bg-warning bg-opacity-10 text-warning">
                            <i class="bi bi-person-lines-fill"></i>
                        </div>
                        <h5 class="card-title fw-bold">Borç / Alacak Raporu</h5>
                        <p class="card-text small">Kime ne kadar borcunuz var, kimden ne alacağınız var?</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/Report/PortfolioReport" class="text-decoration-none">
                <div class="card h-100 report-card" style="--hover-color: #0dcaf0;">
                    <div class="card-body text-center p-4">
                        <div class="icon-box mx-auto bg-info bg-opacity-10 text-info">
                            <i class="bi bi-pie-chart-fill"></i>
                        </div>
                        <h5 class="card-title fw-bold">Portföy Raporu</h5>
                        <p class="card-text small">Varlıklarınızın (Altın, Döviz, Nakit) genel dağılımı ve toplam değeri.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/Report/AccountBalances" class="text-decoration-none">
                <div class="card h-100 report-card" style="--hover-color: #6610f2;">
                    <div class="card-body text-center p-4">
                        <div class="icon-box mx-auto" style="background-color: rgba(102, 16, 242, 0.1); color: #6610f2;">
                            <i class="bi bi-wallet2"></i>
                        </div>
                        <h5 class="card-title fw-bold">Hesap Bakiyeleri</h5>
                        <p class="card-text small">Tüm banka ve cüzdan hesaplarınızın anlık bakiye durumları.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-12">
            <a href="/Report/IncomeExpenseReport" class="text-decoration-none">
                <div class="card h-100 report-card border-start border-5 border-success" style="--hover-color: #198754;">
                    <div class="card-body d-flex align-items-center p-4 flex-wrap">
                        <div class="icon-box bg-success bg-opacity-10 text-success me-4 mb-0">
                            <i class="bi bi-bar-chart-line-fill"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="card-title fw-bold mb-1">Genel Gelir / Gider Raporu</h5>
                            <p class="card-text small mb-0">Aylık veya yıllık bazda toplam kar/zarar durumu ve finansal özet.</p>
                        </div>
                        <div class="ms-auto text-success d-none d-md-block">
                            <i class="bi bi-chevron-right fs-4"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>
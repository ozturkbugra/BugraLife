@using System.Globalization
@model IEnumerable<Expense>

@{
    ViewData["Title"] = "Giderler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var trCulture = new System.Globalization.CultureInfo("tr-TR");
}
@Html.AntiForgeryToken()

<div class="card shadow-sm border-0 mt-3">
    <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-danger"><i class="bi bi-arrow-down-circle me-2"></i>Gider Listesi</h5>

        <button type="button" class="btn btn-danger btn-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-lg me-1"></i> Yeni Gider Ekle
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table datatable table-hover table-striped align-middle" data-order='[[ 0, "desc" ]]'>
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Gider Kişisi</th>
                        <th>Gider Türü</th>
                        <th>Ödeme Tipi</th>
                        <th>Açıklama</th>
                        <th class="text-end">Tutar</th>
                        <th width="100">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-order="@item.expense_date.ToString("yyyy-MM-dd")">
                                @item.expense_date.ToString("dd.MM.yyyy")
                            </td>
                            <td class="fw-bold">
                                @(item.Person != null ? item.Person.person_name : "-")
                            </td>

                            <td>
                                <span class="badge bg-warning bg-opacity-10 text-warning border border-warning">
                                    @(item.ExpenseType != null ? item.ExpenseType.expensetype_name : "-")
                                </span>
                            </td>

                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                    <i class="bi bi-wallet2 me-1"></i>
                                    @(item.PaymentType != null ? item.PaymentType.paymenttype_name : "-")
                                </span>
                            </td>

                            <td class="text-muted small">@item.expense_description</td>

                            <td class="text-end fw-bold text-danger pe-3">
                                -@item.expense_amount.ToString("N2", trCulture) ₺
                            </td>

                            <td>
                                <div class="d-flex gap-2 justify-content-center">
                                    <button class="btn btn-warning btn-sm text-white btn-edit"
                                            data-id="@item.expense_id"
                                            data-person="@item.person_id"
                                            data-expensetype="@item.expensetype_id"
                                            data-paymenttype="@item.paymenttype_id"
                                            data-amount="@item.expense_amount.ToString("N2", trCulture)"
                                            data-date="@item.expense_date.ToString("yyyy-MM-dd")"
                                            data-desc="@item.expense_description">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm" onclick="deleteItem(@item.expense_id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-danger">Yeni Gider Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createForm" method="post">
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tarih</label>
                            <input type="date" name="expense_date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tutar</label>
                            <input type="text" inputmode="decimal" name="expense_amount" class="form-control" required placeholder="0,00"
                                   oninput="this.value = this.value.replace(/[^0-9,.]/g, '');">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kişi / Kurum</label>
                        <select name="person_id" class="aga-select" required>
                            <option value="">Seçiniz...</option>
                            @if (ViewBag.Persons != null)
                            {
                                foreach (var p in ViewBag.Persons as List<Person>)
                                {
                                    <option value="@p.person_id">@p.person_name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Gider Türü</label>
                            <select name="expensetype_id" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.ExpenseTypes != null)
                                {
                                    foreach (var et in ViewBag.ExpenseTypes as List<ExpenseType>)
                                    {
                                        <option value="@et.expensetype_id">@et.expensetype_name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ödeme Tipi (Kasa)</label>
                            <select name="paymenttype_id" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.PaymentTypes != null)
                                {
                                    foreach (var pt in ViewBag.PaymentTypes as List<PaymentType>)
                                    {
                                        <option value="@pt.paymenttype_id">@pt.paymenttype_name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="expense_description" class="form-control" rows="2"></textarea>
                    </div>

                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-warning">Gider Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editForm" method="post">
                <div class="modal-body">
                    <input type="hidden" name="expense_id" id="edit_id">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tarih</label>
                            <input type="date" name="expense_date" id="edit_date" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tutar</label>
                            <input type="text" inputmode="decimal" name="expense_amount" id="edit_amount" class="form-control" required
                                   oninput="this.value = this.value.replace(/[^0-9,.]/g, '');">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kişi / Kurum</label>
                        <select name="person_id" id="edit_person" class="aga-select" required>
                            <option value="">Seçiniz...</option>
                            @if (ViewBag.Persons != null)
                            {
                                foreach (var p in ViewBag.Persons as List<Person>)
                                {
                                    <option value="@p.person_id">@p.person_name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Gider Türü</label>
                            <select name="expensetype_id" id="edit_expensetype" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.ExpenseTypes != null)
                                {
                                    foreach (var et in ViewBag.ExpenseTypes as List<ExpenseType>)
                                    {
                                        <option value="@et.expensetype_id">@et.expensetype_name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ödeme Tipi (Kasa)</label>
                            <select name="paymenttype_id" id="edit_paymenttype" class="aga-select" required>
                                <option value="">Seçiniz...</option>
                                @if (ViewBag.PaymentTypes != null)
                                {
                                    foreach (var pt in ViewBag.PaymentTypes as List<PaymentType>)
                                    {
                                        <option value="@pt.paymenttype_id">@pt.paymenttype_name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="expense_description" id="edit_desc" class="form-control" rows="2"></textarea>
                    </div>

                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning text-white">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>


        $(document).ready(function() {
          // --- A. DÜZENLEME BUTONU ---
            $('.datatable').on('click', '.btn-edit', function() {
                var id = $(this).data('id');
                var personId = $(this).data('person');
                var expenseTypeId = $(this).data('expensetype');
                var paymentTypeId = $(this).data('paymenttype');

                // HTML'deki data-amount zaten "1.905,53" formatında geliyor (View'da ayarlamıştık)
                var amount = $(this).data('amount');

                var dateStr = $(this).data('date');
                var desc = $(this).data('desc');

                $('#edit_id').val(id);

                $('#edit_person').val(personId).trigger('change');
                $('#edit_expensetype').val(expenseTypeId).trigger('change');
                $('#edit_paymenttype').val(paymentTypeId).trigger('change');

                // Inputa olduğu gibi basıyoruz (1.905,53)
                $('#edit_amount').val(amount);

                $('#edit_date').val(dateStr);
                $('#edit_desc').val(desc);

                $('#editModal').modal('show');
            });

            // --- B. EKLEME (AJAX) ---
            $('#createForm').submit(function(e) {
                e.preventDefault();
                processForm($(this), '/Expense/Create');
            });

            // --- C. GÜNCELLEME (AJAX) ---
            $('#editForm').submit(function(e) {
                e.preventDefault();
                processForm($(this), '/Expense/Edit');
            });

            // --- D. ORTAK FORM GÖNDERME FONKSİYONU ---
            function processForm(form, url) {
                // 1. Form verilerini dizi olarak alıyoruz
                var formDataArray = form.serializeArray();

                // 2. 'expense_amount' alanını bulup değerini temizliyoruz
                // Yapılan işlem: Sadece NOKTALARI siliyoruz. Virgül kalıyor.
                // Örnek: "1.905,53" -> "1905,53" (Sunucu bunu doğru anlar)
                for (var i = 0; i < formDataArray.length; i++) {
                    if (formDataArray[i].name === "expense_amount") {
                        // Sadece binlik noktaları siliyoruz, virgüle dokunmuyoruz!
                        formDataArray[i].value = formDataArray[i].value.replace(/\./g, '');
                        break;
                    }
                }

                // 3. Temizlenmiş veriyle AJAX atıyoruz
                $.ajax({
                    url: url,
                    type: 'POST',
                    data: formDataArray, // Düzeltilmiş veriyi gönderiyoruz
                    success: function(response) {
                        if (response.success) {
                            $('.modal').modal('hide');
                            showToast('success', response.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() { showToast('error', 'Hata oluştu.'); }
                });
            }
        });

        // --- E. SİLME ---
        function deleteItem(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu gider kaydı silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'Vazgeç',
                background: document.documentElement.getAttribute('data-theme') === 'dark' ? '#252b36' : '#fff',
                color: document.documentElement.getAttribute('data-theme') === 'dark' ? '#fff' : '#333'
            }).then((result) => {
                if (result.isConfirmed) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    $.ajax({
                        url: '/Expense/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function(response) {
                            if (response.success) {
                                showToast('success', response.message);
                                setTimeout(() => location.reload(), 1000);
                            } else {
                                showToast('error', response.message);
                            }
                        }
                    });
                }
            })
        }
    </script>
}
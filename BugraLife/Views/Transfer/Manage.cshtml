@model List<BugraLife.Controllers.TransferFileModel>

@{
    ViewData["Title"] = "Transfer Dosya Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Senin standart düzenin
}

<div class="container-fluid mt-3">

    <div class="card shadow-sm border-secondary mb-4">
        <div class="card-header bg-primary ">
            <h5 class="mb-0"><i class="bi bi-cloud-upload me-2"></i>Dosya Yükle</h5>
        </div>
        <div class="card-body">
            <form action="/Transfer/Upload" method="post" enctype="multipart/form-data" class="row g-3 align-items-end">
                <div class="col-md-10">
                    <label class="form-label">Dosyaları Seç (Çoklu seçim yapabilirsin)</label>
                    <input type="file" name="files" class="form-control" multiple required>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100 fw-bold">
                        <i class="bi bi-upload"></i> Yükle
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-secondary">
        <div class="card-header   d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Yüklü Dosyalar</h5>
            <a href="/Transfer/Index" target="_blank" class="btn btn-sm btn-light text-dark fw-bold">
                <i class="bi bi-eye"></i> Misafir Görünümü
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Dosya Adı</th>
                            <th>Boyut</th>
                            <th>Tarih</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 ">
                                    Klasör boş. Yukarıdan dosya yükle aga.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@item.Name</td>
                                    <td>@item.Size</td>
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary me-1" onclick="copyLink('@item.Name')">
                                            <i class="bi bi-link-45deg"></i> Link
                                        </button>

                                        <form action="/Transfer/Delete" method="post" class="d-inline" onsubmit="return confirm('Bu dosyayı silmek istediğine emin misin?');">
                                            <input type="hidden" name="fileName" value="@item.Name">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function copyLink(fileName) {
        // İndirme linki formatı
        var url = window.location.origin + "/Transfer/Download?fileName=" + encodeURIComponent(fileName);

        navigator.clipboard.writeText(url).then(function() {
            // Basit bir uyarı (SweetAlert varsa onu da kullanabilirsin)
            alert("İndirme linki kopyalandı!\n" + url);
        }, function(err) {
            console.error('Kopyalama hatası: ', err);
        });
    }
</script>
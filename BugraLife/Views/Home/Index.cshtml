@model DashboardViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">

    @if (Model.PendingToDos != null && Model.PendingToDos.Any())
    {
        <div class="card shadow-lg mb-5 border-secondary">
            <div class="card-header border-bottom border-secondary d-flex align-items-center">
                <i class="bi bi-check2-square fs-3 me-2 text-primary"></i>
                <h3 class="fw-bold  mb-0">Yapılacaklar Listesi</h3>
                <span class="badge bg-danger ms-3">@Model.PendingToDos.Count Bekleyen</span>
            </div>
            <div class="card-body p-0">
                <div class="">
                    @foreach (var todo in Model.PendingToDos)
                    {
                        // Tarih Kontrolü: Bugün mü, Geçmiş mi?
                        bool isOverdue = todo.plannedtodo_date.Date < DateTime.Today;
                        string dateBadgeClass = isOverdue ? "bg-danger" : "bg-success";
                        string dateText = isOverdue ? "GECİKTİ" : "BUGÜN";
                        string rowClass = isOverdue ? "border-start border-4 border-danger" : "border-start border-4 border-success";

                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3 @rowClass"
                             style="border-bottom: 1px solid #373b3e;">

                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <button class="btn btn-outline-secondary btn-sm rounded-circle" style="width: 32px; height: 32px;">
                                        <i class="bi bi-circle"></i>
                                    </button>
                                </div>

                                <div>
                                    <h5 class="mb-1 fw-bold @(isOverdue ? "text-danger" : "")">
                                        @todo.plannedtodo_description
                                    </h5>
                                    <small class="text-secondary">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @todo.plannedtodo_date.ToString("dd MMMM dddd")
                                    </small>
                                </div>
                            </div>

                            <div class="text-end">
                                <span class="badge @dateBadgeClass rounded-pill">
                                    @dateText
                                </span>
                                @if (isOverdue)
                                {
                                    // Kaç gün geçti?
                                    var daysLate = (DateTime.Today - todo.plannedtodo_date.Date).TotalDays;
                                    <div class="text-danger small fw-bold mt-1">@daysLate Gün Önce</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success border-success text-center mb-5 shadow-lg" style="color: #75b798;">
            <i class="bi bi-emoji-sunglasses fs-4 me-2"></i>
            <strong>Harika!</strong> Bugün ve öncesine ait yapacak hiçbir işin kalmadı.
        </div>
    }

    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-wallet2 fs-3 me-2 text-info"></i>
        <h3 class="fw-bold  mb-0">Anlık Hesap Durumları</h3>
    </div>

    <div class="row g-3 mb-5">
        @foreach (var acc in Model.Accounts)
        {
            // Kart Rengi Belirleme
            string borderClass = "border-acc-cash";
            string icon = "bi-cash-coin";
            string textClass = "text-info";

            if (acc.IsCreditCard)
            {
                borderClass = "border-acc-card";
                icon = "bi-credit-card";
                textClass = "text-danger"; // Kart rengi pembe/kırmızı ton
            }
            else if (acc.Type == "Banka Hesabı")
            {
                borderClass = "border-acc-bank";
                icon = "bi-bank";
                textClass = "text-primary"; // Banka mor/mavi
            }

            // Tutar Rengi
            // Kredi kartı eksi ise normaldir (Borçtur), ama yine de kırmızı gösterelim dikkat çeksin.
            string amountColor = acc.Balance >= 0 ? "text-success" : "text-danger";

            <div class="col-md-6 col-lg-3">
                <div class="card status-card h-100 shadow-lg @borderClass">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h6 class="text-secondary small text-uppercase fw-bold mb-1">@acc.Type</h6>
                                <h5 class="card-title fw-bold  mb-0">@acc.AccountName</h5>
                            </div>
                            <div class="rounded-circle p-2 d-flex align-items-center justify-content-center" style="width:40px; height:40px;">
                                <i class="bi @icon @textClass fs-5"></i>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h3 class="fw-bold mb-0 @amountColor">
                                @acc.Balance.ToString("N2") ₺
                            </h3>
                            @if (acc.IsCreditCard)
                            {
                                <small class="text-secondary" style="font-size: 0.75rem;">
                                    @(acc.Balance < 0 ? "Güncel Borç" : "Artı Bakiye")
                                </small>
                            }
                            else
                            {
                                <small class="text-secondary" style="font-size: 0.75rem;">Mevcut Bakiye</small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-speedometer2 fs-3 me-2 text-warning"></i>
        <h3 class="fw-bold mb-0">Bu Ayın Sabit Gider Durumu</h3>
    </div>

    @if (Model.FixedExpenseStatuses.Any())
    {
        <div class="row g-3">
            @foreach (var item in Model.FixedExpenseStatuses)
            {
                <div class="col-md-6 col-lg-3">
                    @if (item.IsPaid)
                    {
                        <div class="card status-card h-100 border-paid shadow-lg">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title fw-bold text-success mb-0">@item.ExpenseName</h5>
                                    <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                </div>
                                <p class="card-text text-secondary mb-0 small">Son Ödeme: @item.DueDate.ToString("dd MMMM")</p>
                                <div class="mt-3">
                                    <span class="badge bg-success bg-opacity-25 text-success w-100">ÖDENDİ</span>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        @if (item.DaysDiff < 0)
                        {
                            // DaysDiff negatif (örn: -5), pozitife çevirip gösteriyoruz
                            var lateDays = Math.Abs(item.DaysDiff);

                            <div class="card status-card h-100 border-late shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title fw-bold text-danger mb-0">@item.ExpenseName</h5>
                                        <i class="bi bi-exclamation-triangle-fill text-danger fs-4"></i>
                                    </div>
                                    <p class="card-text text-secondary mb-0 small">Son Ödeme: @item.DueDate.ToString("dd MMMM")</p>
                                    <div class="mt-3 d-flex justify-content-between align-items-center">
                                        <span class="badge bg-danger bg-opacity-25 text-danger flex-grow-1 me-2">ÖDENMEDİ</span>
                                        <span class="text-danger fw-bold small">@lateDays Gün Geçti!</span>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (item.DaysDiff == 0)
                        {
                            <div class="card status-card h-100 border-wait shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title fw-bold text-warning mb-0">@item.ExpenseName</h5>
                                        <i class="bi bi-alarm-fill text-warning fs-4"></i>
                                    </div>
                                    <p class="card-text text-secondary mb-0 small">Son Ödeme: BUGÜN</p>
                                    <div class="mt-3">
                                        <span class="badge bg-warning bg-opacity-25 text-warning w-100">BUGÜN SON GÜN</span>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card status-card h-100 border-wait shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title fw-bold mb-0">@item.ExpenseName</h5>
                                        <i class="bi bi-hourglass-split text-info fs-4"></i>
                                    </div>
                                    <p class="card-text text-secondary mb-0 small">Son Ödeme: @item.DueDate.ToString("dd MMMM")</p>
                                    <div class="mt-3 d-flex justify-content-between align-items-center">
                                        <span class="badge bg-secondary bg-opacity-25 text-secondary flex-grow-1 me-2">BEKLİYOR</span>
                                        <span class="text-info fw-bold small">@item.DaysDiff Gün Kaldı</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-dark border-secondary text-center">
            <i class="bi bi-info-circle me-2"></i>Henüz takip edilen sabit gider yok. <a href="/FixedExpense/Index" class="text-warning fw-bold">Buradan ekle aga.</a>
        </div>
    }

</div>
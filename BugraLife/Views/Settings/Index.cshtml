@model SettingsViewModel
@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card  border-secondary  shadow-lg">
                <div class="card-header border-secondary fw-bold text-warning">
                    <i class="bi bi-gear-fill me-2"></i>Hesap Yönetimi
                </div>
                <div class="card-body">
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
                        <button class="nav-link active text-start mb-2" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button">
                            <i class="bi bi-person-badge me-2"></i>Profil & Şifre
                        </button>
                        <button class="nav-link text-start" id="v-pills-2fa-tab" data-bs-toggle="pill" data-bs-target="#v-pills-2fa" type="button">
                            <i class="bi bi-shield-lock me-2"></i>İki Aşamalı Doğrulama
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="tab-content" id="v-pills-tabContent">

                <div class="tab-pane fade show active" id="v-pills-profile">
                    <div class="card  border-secondary  shadow-lg">
                        <div class="card-header border-secondary">Profil Bilgileri</div>
                        <div class="card-body">
                            <form asp-action="UpdateProfile" method="post">
                                <div class="mb-3">
                                    <label class="form-label text-secondary">Ad Soyad</label>
                                    <input type="text" asp-for="NameSurname" class="form-control   border-0">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-secondary">Kullanıcı Adı</label>
                                    <input type="text" asp-for="Username" class="form-control   border-0">
                                </div>
                                <hr class="border-secondary my-4">
                                <h6 class="text-warning">Şifre Değiştir (İsteğe Bağlı)</h6>
                                <div class="mb-3">
                                    <label class="form-label text-secondary">Mevcut Şifre</label>
                                    <input type="password" asp-for="CurrentPassword" class="form-control   border-0">
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-secondary">Yeni Şifre</label>
                                        <input type="password" asp-for="NewPassword" class="form-control   border-0">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-secondary">Tekrar</label>
                                        <input type="password" asp-for="ConfirmPassword" class="form-control   border-0">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary fw-bold w-100">Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="v-pills-2fa">
                    <div class="card  border-secondary  shadow-lg">
                        <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                            <span>Google Authenticator (2FA)</span>
                            @if (Model.IsTwoFactorEnabled)
                            {
                                <span class="badge bg-success">AKTİF</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">PASİF</span>
                            }
                        </div>
                        <div class="card-body">

                            @if (Model.IsTwoFactorEnabled)
                            {
                                <div class="text-center py-4">
                                    <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Hesabınız Güvende!</h5>
                                    <p class="text-secondary">Giriş yaparken Google Authenticator kodunu girmeniz gerekecek.</p>

                                    <form asp-action="Disable2FA" method="post" onsubmit="return confirm('Güvenliği kapatmak istediğine emin misin?')">
                                        <button type="submit" class="btn btn-outline-danger mt-3">2FA'yı Kapat</button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-6 text-center border-end border-secondary">
                                        <h6 class="text-warning mb-3">Adım 1: QR Kodu Okut</h6>
                                        <div class=" p-2 d-inline-block rounded">
                                            <img src="@Model.QrCodeImageUrl" alt="QR Code" width="150" />
                                        </div>
                                        <p class="text-secondary small mt-2">Veya manuel kod: <br> <strong class="">@Model.EntryKey</strong></p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-warning mb-3">Adım 2: Doğrula</h6>
                                        <p class="text-secondary small">Telefonundaki uygulamada çıkan 6 haneli kodu gir.</p>

                                        <form asp-action="Enable2FA" method="post">
                                            <div class="mb-3">
                                                <input type="text" name="code" class="form-control   border-0 text-center fs-4 letter-spacing-2" placeholder="000 000" maxlength="6" required>
                                            </div>
                                            <button type="submit" class="btn btn-success w-100 fw-bold">Doğrula ve Aç</button>
                                        </form>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Aktif tab rengini ayarla */
    .nav-pills .nav-link.active {
        background-color: #ffc107 !important; /* Warning */
        color: #000 !important;
    }

    .nav-pills .nav-link {
        color: #e0e0e0;
    }

    .letter-spacing-2 {
        letter-spacing: 5px;
    }
</style>